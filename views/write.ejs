<%- include('partials/header.ejs') %>

    <div class="container">
        <form action="/send" method="POST">
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="text" name="title" class="form-control" id="exampleFormControlInput1" required>
            </div>
            <div class="form-group pt-3">
                <label for="exampleFormControlTextarea1">Content</label>
                <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="30"
                    required></textarea>
            </div>
            <button class="btn btn-outline-success mt-3 mb-2" type="submit">Post</button>
        </form>
    </div>
