<%- include('partials/header.ejs') %>
    <div class="container">
    <h2>Edit Post</h2>

    <form action="/posts/<%= index %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>    
            <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="<%= post.title %>" required>
        </div> 
        <div class="form-group pt-3">
            <label for="exampleFormControlTextarea1">Content</label>
            <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="30" required><%= post.content %></textarea>
        </div>
        <button class="btn btn-outline-success mt-3 mb-2" type="submit">Update</button>
    </form>
</div>
<%- include('partials/footer.ejs') %>       